{
  "name": "@simforge/ui",
  "version": "0.1.0",
  "private": true,
  "description": "Simforge visual editor and simulation interface",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
